<Window x:Class="JukeBox.Dialogue"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Dialogue" Height="100" Width="200">
    <Grid>
        <TextBox Name="TxtResponse" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10"/>
        <Button Name="BtnDone" Content="Done" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10" Width="50" Click="BtnDone_Click" />
        <Button Name="BtnCancel" Content="Cancel" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10" Width="50" Click="BtnCancel_Click"/>
        
    </Grid>
</Window>
